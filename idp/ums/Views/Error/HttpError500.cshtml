@{
    Layout = null;
    var imageHelper = new ImageHelper();
    var errorstacktrace = GlobalAppSettings.ReplaceErrorStackTrace(ViewBag.Errorstacktrace);
    var isAdmin = Context.Session.GetString("IsAdmin") != null ? Convert.ToBoolean(Context.Session.GetString("IsAdmin").ToString()) : false;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@T["Internal Server Error"] - @GlobalAppSettings.SystemSettings.OrganizationName</title>
    @await Html.PartialAsync("../Shared/_Favicon")
    @await Html.PartialAsync("../Shared/_FontReference")
    @await Html.PartialAsync("../Shared/_ThemeReference")
    <link rel="stylesheet" href="~/bundles/css/error-page.css" asp-append-version="true" />
    <script src="~/bundles/js/error.js" asp-append-version="true"></script>
    <script src="~/js/onpremiselocalizationcontent.js" asp-append-version="true"></script>
</head>
<body class="error-full-content">
    <div class="error-page-outer">
        <div class="error-page-content">
            <div class="error-inside">
                <div class="error-image-center-1">
                    <img src="@Url.Content("~/logos?type=login")" onerror="if (this.src != '@Url.Content(CloudAppConfig.FallbackLoginLogoUrl)') this.src = '@Url.Content(CloudAppConfig.FallbackLoginLogoUrl)';" class="error-image-1">
                </div>
                <div class="error-image-center-2">
                    <img src="@imageHelper.InternalServerErrorImage()" class="error-image-2">
                </div>
                <div class="error-type">@T["Internal Server Error (500)"]</div>
                <div class="error-text">
                    @T["Sorry! The server has encountered an internal error and was unable to complete your request."]
                </div>
                @if (ViewBag.ErrorMessage != null)
                {
                     @if (GlobalAppSettings.SystemSettings.ShowStackTrace || isAdmin)
                    {
                        <div id="deploy-error-container">
                            <textarea type="text" id="deploy-error-box" disabled>@T["ErrorMessage"]:@ViewBag.ErrorMessage
@T["ErrorStacktrace"]:@errorstacktrace</textarea>
                            <span class="su su-copy text focus" id="deploy-error-copy" data-toggle="tooltip" title="@T["Click to copy"]"></span>
                        </div>
                    }
                    else
                    {
                        <div id="deploy-error-container">
                            <textarea type="text" id="deploy-error-box" disabled>@T["ErrorMessage"]:@ViewBag.ErrorMessage</textarea>
                            <span class="su su-copy text focus" id="deploy-error-copy" data-toggle="tooltip" title="@T["Click to copy"]"></span>
                        </div>
                    }
                    <div class="take-me-back-to-home-page">
                        <span class="error-page-cursor"><a class="error-to-back-text-color" href="@Url.Action("Homepage", "Home")">@T["Go to home page"]</a></span> or
                        @Html.Raw(string.Format(T["{0}{1}Create a support ticket{2} with application logs by referring to this"].Value, "<span class='error-page-cursor'>", "<a class='error-to-back-text-color' href='" + "https://support."+GlobalAppSettings.BrandingDomain+"/create" + "'> ", "</a></span>"))
                        <span class="error-page-cursor"><a class="error-to-back-text-color" href="@await HelpSiteManager.GetHelpSiteUrl(HelpSiteUrlNames.ErrorAndDebugLogs)">@T["link"]</a></span>
                    </div>
                }
                else
                {
                    <div class="take-me-back-to-home-page">
                        <span class="error-page-cursor"><a class="error-to-back-text-color" href="@Url.Action("Homepage", "Home")">@T["Take me back to home page"]</a></span>
                    </div>
                }
            </div>
        </div>
    </div>
    @await Html.PartialAsync("../Shared/_FooterOnPremise")
</body>
</html>