@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/bundles/css/account-page.css" integrity="@IntegrityTagHelper.GetIntegrity("bundles/css/account-page.css")" crossorigin="anonymous" asp-append-version="true" />
    <script nonce="@Context.Items["ScriptNonce"]" type="text/javascript">
        window.onload = function () {
            document.getElementById('login-form').submit();
        }
    </script>
</head>
<body>
<form method="post" id="login-form" name="loginForm" class="login-form">
    @Html.AntiForgeryToken()
    <div id="container">
        <div id="inner-container">
            <div id="loading-popup"></div>
            <span id="waiting-text">@T["Please wait..."]</span>
        </div>
    </div>
</form>
</body>
</html>