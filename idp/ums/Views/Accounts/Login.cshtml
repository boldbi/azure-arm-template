@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/bundles/css/account-page.css" asp-append-version="true" />
    <script type="text/javascript">
        window.onload = function () {
            document.getElementById('login-form').submit();
        }
    </script>
</head>
<body>
    <form method="post" id="login-form" name="loginForm" class="login-form">
        <div id="container">
            <div id="inner-container">
                <div id="loading-popup"></div>
                <span id="waiting-text">[[[Please wait...]]]</span>
            </div>
        </div>
    </form>
</body>
</html>