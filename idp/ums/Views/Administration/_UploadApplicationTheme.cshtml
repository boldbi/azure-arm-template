<div id="application-theme-upload-dialog-popup">
    <div class="modal" tabindex="-1" role="dialog">
        <div id="application-theme-upload-dialog" class="modal-dialog applicationtheme-upload-dialog" role="document">
            <form action="@Url.Action("UploadApplicationFile", "Administration")" method="post" id="Upload-application-fileform" enctype="multipart/form-data" class="col-lg-12 no-padding modal-content upload-form" autocomplete="off" novalidate>
                @Html.AntiForgeryToken()
                <div class="col-xs-12">
                    <div class="col-xs-12 field-padding">
                        <label class="font-label">@T["Choose Theme File"]</label>
                        <div class="upload-box">
                            <input type="text" class="form-control no-margin file-name trigger-app-theme-upload theme-file-name" id="application-theme-file-name" tabindex="-1" value="" placeholder="@T["Choose Theme File"]" readonly>
                            <span class="trigger-app-theme-upload input-group-addon upload-file-btn">...</span>
                            <input type="file" accept=".css" name="applicationthemefile" id="applicationtheme-file" class="upload-btn">
                            <span class="applicationthemefileupload-validation-messages validation-message" id="invalid-applicationthemefile-name"></span>
                        </div>
                    </div>
                    <div class="col-xs-12 no-padding">
                        <p class="no-margin no-padding dialog-info">@Html.Raw(string.Format(T["Please ensure your custom theme file is valid by uploading it into this {0}online validation helper{1}."].Value, "<a target='_blank' href='https://jigsaw.w3.org/css-validator/#validate-by-upload" + "'>", "</a>"))</p>
                    </div>
                    <div class="col-xs-12 field-padding padding-bottom">
                        <label class="font-label">@T["Theme Name"]</label>
                        <div>
                            <input type="text" id="applicationtheme-name" maxlength="254" class="form-control validation theme-name" placeholder="@T["Theme Name"]" name="filename" data-name="applicationtheme name" required disabled>
                            <span class="validation-message" id="invalid-applicationtheme-name"></span>
                        </div>
                    </div>
                    <div class="col-xs-12 field-padding padding-bottom">
                        <p class="no-margin no-padding dialog-info">
                            @if (!CloudAppConfig.Branding.IsWhiteLabelling)
                            {
                                @Html.Raw(string.Format(T["Please download the default color definition files for dark and light themes from this {0}link{1}. You can customize the color code in this definition file and upload it to the application. Please refer to this {2}link{3} to learn more about how to customize color codes."].Value, "<a target='_blank' href='" + Url.Action("DownloadThemeTemplate", "Administration") + "'>", "</a>", "<a target='_blank' href='" + await HelpSiteManager.GetHelpSiteUrl(HelpSiteUrlNames.LookAndFeel) + "'>", "</a>"))
                            }
                            else
                            {
                                @Html.Raw(string.Format(T["Please download the default color definition files for dark and light themes. You can customize the color code in this definition file and upload it to the application."].Value))
                            }
                        </p>
                    </div>
                </div>
                <div class="col-xs-12 modal-footer">
                    <input type="button" id="cancel-applicationtheme-upload" class="secondary-button popup-close" value="@T["Cancel"]"/>
                    <input type="submit" id="upload-applicationtheme" class="primary-button upload-theme" value="@T["Upload"]" disabled/>
                </div>
            </form>
        </div>
    </div>
</div>
