<div class="sub-section col-xs-12 no-padding">
    <h3 class="title sub-section-heading">@T["Display"]</h3>
    <div class="section-info-message">
        @T["If Inherit from user’s browser locale/timezone is selected, the displayed date, time, and time zone will be based on the user’s browser settings."]
    </div>
    <div class="form-group section-content-first">
        @Html.Label("time-zone", T["Time Zone"].Value, new { @class = "app-textbox-label col-lg-12" })
        <div class="admin-settings-drop-down col-lg-12 no-padding">
            @Html.DropDownList("timezone", ViewBag.TimeZone as IEnumerable<SelectListItem>, new { id = "time-zone", @class = "form-control", data_none_results_text = T["No results match"].Value, data_size = "10", title = T["Select timezone"].Value, data_live_search = "true", data_live_search_placeholder = "Search" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("MM_DD_YYYY", T["Date format"].Value, new { @class = "app-textbox-label col-lg-12" })
        <div class="dropdown admin-settings-drop-down col-lg-12 no-padding">
            @Html.DropDownList("dateformat", ViewBag.DateFormat as IEnumerable<SelectListItem>, new { id = "date-format", @class = "form-control", data_none_results_text = T["No results match"].Value, data_size = "10", title = T["Select date format"].Value, data_live_search = "true", data_live_search_placeholder = T["Search"].Value })

        </div>
    </div>
    <div class="form-group">
        @Html.Label("Use 24-hour format", T["Time format"].Value, new { @class = "app-textbox-label col-lg-12" })
        <div class="admin-settings-drop-down col-lg-12 no-padding">
            @Html.DropDownList("timeformat", ViewBag.TimeFormat as IEnumerable<SelectListItem>, new { id = "time_format", @class = "form-control", data_none_results_text = T["No results match"].Value, data_size = "10", title = T["Select time format"].Value, data_live_search = "true", data_live_search_placeholder = T["Search"].Value })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("language", T["Application Language"].Value, new { @class = "col-lg-12 app-textbox-label" })
        <p class="manage-link-btn">
            <a href="javascript:void(0)" onclick="onLocalizationDialogOpen()" id="manage" title="@T["Upload the language file here."]">@T["Manage"]</a>
        </p>
        <div class="admin-settings-drop-down col-lg-12 language-group no-padding">
            @Html.DropDownList("language", ViewBag.languageList as IEnumerable<SelectListItem>, new { id = "language", @class = "form-control pull-left", data_live_search = "false" })
            <input type="hidden" id="lang_tag" value="@ViewBag.systemLanguage">
            <input type="hidden" id="return_url" value="@ViewBag.SystemSettings.BaseUrl">
        </div>
    </div>
</div>