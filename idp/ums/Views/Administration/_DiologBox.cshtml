@functions
{
    public string GetSomeString(AuthProvider provider)
    {
        if (provider == AuthProvider.AzureAD)
        {
            return "Azure AD";
        }
        else if (provider == AuthProvider.CustomOAuth)
        {
            return "OAuth 2.0";
        }
        else if (provider == AuthProvider.CustomOIDC)
        {
            return "OpenID Connect";
        }
        else if (provider == AuthProvider.JWTSSO)
        {
            return "JWT SSO";
        }
        else
        {
            return "No Authentication Configured";
        }
    }
}
<div id="default-authentication-confirmation-diolog" class="modal no-padding" tabindex="-1" role="dialog">
    <div id="popup-container" class="col-lg-12 no-padding">
        <div class="modal-body col-xs-12 no-padding">
            <p>[[[You have chosen]]] <span class="provider-name"> [[[@GetSomeString(ViewBag.DefaultAuthenticationSettings.EnabledProviderName)]]]</span> [[[as the]]] <a href="@Url.Action("AuthenticationSettings","Administration")">default authentication</a>. [[[If you disable this setting, the default authentication will be reverted.]]]</p><br>
            <p>[[[Would you like to proceed?]]]</p>
        </div>
    </div>
</div>
