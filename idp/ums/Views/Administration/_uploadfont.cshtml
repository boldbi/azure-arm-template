<div id="font-upload-dialog-popup">
    <div class="modal" tabindex="-1" role="dialog">
        <div id="font-upload-dialog" class="modal-dialog" role="document">
            <form action="@Url.Action("UploadFontFile", "Administration")" method="post" id="upload-font-fileform" enctype="multipart/form-data" class="col-lg-12 no-padding modal-content upload-form" autocomplete="off" novalidate>
                @Html.AntiForgeryToken()
                <div class="col-xs-12">
                    <div class="col-xs-12 field-padding">
                        <label class="font-label">@T["Font file"]<span class="mandatory">*</span></label>
                        <div class="upload-box">
                            <input type="text" class="form-control no-margin trigger-font-upload" id="font-file-name" tabindex="-1" value="@T["Browse file path (.woff2)"]" readonly>
                            <span class="input-group-addon upload-file-btn trigger-font-upload">...</span>
                            <input type="file" accept=".woff2" name="fontfile" id="font-file" class="upload-btn">
                            <span class="validation-message" id="invalid-file-name"></span>
                        </div>
                    </div>

                    <div class="col-xs-12 field-padding padding-bottom">
                        <label class="font-label">@T["Font name"]<span class="mandatory">*</span></label>
                        <div>
                            <input type="text" id="font-name" maxlength="254" class="form-control validation" placeholder="@T["Font name"]" name="filename" data-name="font name" required disabled>
                            <span class="validation-message" id="invalid-font-name"></span>
                        </div>
                    </div>
                    <div class="col-xs-12 field-padding padding-bottom">
                    </div>
                </div>
                <div class="col-xs-12 modal-footer">
                    <input type="button" id="cancel-font-upload" class="secondary-button popup-close" value="@T["Cancel"]" />
                    <input type="submit" id="upload-font" class="primary-button" value="@T["Upload"]" disabled />
                </div>
            </form>
        </div>
    </div>
</div>
