@{
    var showSyncfusionBrand = GlobalAppSettings.SystemSettings.IsShowPoweredBySyncfusion ? "form-group" : "form-group d-none";
}
<div class="sub-section last-sub-section col-12 float-start no-padding">
    <h3 class="title sub-section-heading blur-whitelable-content">@T["Branding"]</h3>

    <div class="col-12 float-start no-margin no-padding blur-whitelable-content">
        <div class="col-12 float-start no-padding section-content-first">
            <div class="col-6 float-start branding-logo no-padding login-screen-logo" data-image="login-screen">
                <div class="col-3 float-start logo-section">
                    <img id="display-login-logo" src="@Url.Content("~/logos?type=login")" alt="@T["Login screen logo"]" />

                </div>
                <div class="col-8 float-start logo-description">
                    <h3 class="title col-12 float-start sub-section-heading blur-whitelable-content no-margin">@T["Login screen logo"]</h3>
                    <p class="no-margin">@T["200x40 pixels preferred"]</p>
                    <div class="upload-link">
                        <input id="upload-login-image" class="settings-upload-button">
                    </div>
                </div>
                <span class="validation-error-image"></span>
            </div>
            <div class="col-6 float-start branding-logo header-logo no-padding" data-image="header-logo">
                <div class="col-3 float-start logo-section">
                    <img id="mainscreen_logo_img" src="@Url.Content("~/logos?type=header")" alt="@T["Header logo"]" />
                </div>
                <div class="col-8 float-start logo-description">
                    <h3 class="title col-12 float-start sub-section-heading blur-whitelable-content no-margin">@T["Header logo"]</h3>
                    <p class="no-margin">@T["40x40 pixels preferred"]</p>
                    <div class="upload-link">
                        <input id="upload-Main-screen-image" class="settings-upload-button">
                    </div>
                </div>
                <span class="validation-error-image"></span>
            </div>
        </div>

        <div class="col-12 float-start no-padding">
            <div class="col-6 float-start branding-logo favicon no-margin no-padding" data-image="favicon">
                <div class="col-3 float-start logo-section">
                    <span class="app-img-container favicon tooltip-container" data-bs-toggle="tooltip" data-animation="true" data-image="favicon">
                        <img id="favicon_logo_img" src="@Url.Content("~/logos?type=favicon")" alt="@T["Favicon"]" />
                    </span>
                </div>
                <div class="col-8 float-start logo-description">
                    <h3 class="title col-12 float-start sub-section-heading blur-whitelable-content no-margin">@T["Favicon"]</h3>
                    <p class="no-margin">@T["40x40 pixels preferred"]</p>
                    <div class="upload-link">
                        <input id="upload-favicon-image" class="settings-upload-button">
                    </div>
                </div>
                <span class="validation-error-image"></span>
            </div>
            <div class="col-6 float-start branding-logo email-logo no-padding" data-image="email-logo">
                <div class="col-3 float-start logo-section">
                    <img id="email_logo_img" src="@Url.Content("~/logos?type=email")" alt="@T["Email logo"]" />
                </div>
                <div class="col-8 float-start logo-description">
                    <h3 class="title col-12 float-start sub-section-heading blur-whitelable-content no-margin">@T["Email logo"]</h3>
                    <p class="no-margin">@T["200x40 pixels preferred"]</p>
                    <div class="upload-link">
                        <input id="upload-emaillogo-image" class="settings-upload-button">
                    </div>
                </div>
                <span class="validation-error-image"></span>
            </div>
            <div class="col-12 float-start no-padding">
                @if (GlobalAppSettings.IsBoldBIOnPremise)
                {
                    <div class="col-6 float-start branding-logo ai-logo no-padding" data-image="ai-logo">
                    <div class="col-3 float-start logo-section">
                        <img id="ai_logo_img" src="@Url.Content("~/logos?type=ai")" alt="@T["AI logo"]"/>
                    </div>
                    <div class="col-8 float-start logo-description">
                        <h3 class="title col-12 float-start sub-section-heading blur-whitelable-content no-margin">@T["AI logo"]</h3>
                        <p class="no-margin">@T["40x40 pixels preferred"]</p>
                        <div class="upload-link">
                            <input id="upload-ai-logo-image" class="settings-upload-button">
                        </div>
                    </div>
                    <span class="validation-error-image"></span>
                </div>
                }
                <div class="blur-whitelable-content col-12 float-start no-margin powerdby-section">
                    <div class="col-12 no-padding">
                        <div class="form-group no-margin">
                            <div id="enable-checkbox">
                                @Html.CheckBox("enablepoweredbysyncfusion", new { @class = "material-checkbox", @id = "enablepoweredbysyncfusion" })
                                @Html.Hidden("enablepoweredbysyncfusion")
                                @Html.Label("enablepoweredbysyncfusion", T["Show powered by information"].Value, new { @class = "app-textbox-label col-4 float-start section-label" })
                            </div>
                        </div>
                        <div class="form-group col-6 float-start branding-logo footer-logo no-padding margin" data-image="login-screen">
                            <div class="col-3 float-start logo-section">
                                <img id="display-powered-logo" src="@Url.Content("~/logos?type=poweredby")" alt="@T["Powered by logo"]" />
                            </div>
                            <div class="col-8 float-start logo-description">
                                <h3 class="title col-12 float-start sub-section-heading blur-whitelable-content no-margin">@T["Powered by logo"]</h3>
                                <p class="no-margin">@T["100x25 pixels preferred"]</p>
                                <div class="upload-link">
                                    <input id="upload-poweredlogo-image" class="settings-upload-button">
                                </div>
                            </div>
                            <span class="validation-error-image"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group blur-whitelable-content col-12 float-start no-margin no-padding">
                    <div class="col-12 float-start no-padding">
                        <div class="form-group no-margin">
                            <div id="enable-checkbox">
                                @Html.CheckBox("enablecopyrightinfo", new { @class = "material-checkbox", @id = "enablecopyrightinfo" })
                                @Html.Hidden("enablecopyrightinfo")
                                @Html.Label("enablecopyrightinfo", T["Show copyright information"].Value, new { @class = "app-textbox-label col-4 float-start section-label" })
                            </div>
                        </div>
                        <label class="app-textbox-label section-label title col-12 float-start copyright-info">@T["Site copyright information"]</label>
                        <div class="no-padding col-12 float-start">
                            <input type="text" id="site-copyright" name="copy_right_info" class="form-control validation-padding" placeholder="@T["Enter copyright information"]" value="@ViewBag.SystemSettings.CopyrightInformation" data-original-value="@ViewBag.SystemSettings.CopyrightInformation" />
                            <span class="validation-errors"></span>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>