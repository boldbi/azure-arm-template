@using Syncfusion.Server.Base.DataClasses;
@model List<BoldServiceDisplayVersion>
@{
    ViewBag.Title = T["Bold Service Version"].Value + " - " + GlobalAppSettings.SystemSettings.OrganizationName;
}

@section styles{
    <link rel="stylesheet" href="~/bundles/css/boldservice-version.css" integrity="@IntegrityTagHelper.GetIntegrity("bundles/css/boldservice-version.css")" crossorigin="anonymous" asp-append-version="true" />
}

@section MainSection{
    @await Html.PartialAsync("_AdminMenu")

<div class="col-12 float-start header-section no-padding no-margin width-alignment">
        <div id="api-keys-header" class="col-12 col-md-12 col-sm-12 float-start admin-page-header header-without-button">
            <div class="admin-page-header-description col-6 float-start no-padding" id="application-title">
                <hgroup class="col-12 float-start header-group">
                    <h1 class="page-title">
                        @T["Bold Service Version"]
                    </h1>
                    <h5 class="page-description">
                        @T["Product version information of the Bold Service Applications."]
                    </h5>
                </hgroup>
            </div>
            <div class="col-4 top-nav-sec no-padding">
                @await Html.PartialAsync("../Shared/_TopMenu")
            </div>

        </div>
    </div>
    <div id="bold-service-version-container" class="col-12 float-start admin-page-content-container">
    <div class="admin-page-content col-12 float-start no-padding">
        <div id="bold-service-version-body" class="col-12 float-start admin-page-body">
            <div>
                <table class="table table-section">
                    <tr>
                        <th>@T["Applications"]</th>
                        <th>@T["Versions"]</th>
                    </tr>
                    @foreach (var boldApp in Model)
                    {
                        <tr>
                            <td>@boldApp.ApplicationName</td>
                            <td>@boldApp.ApplicationVersion</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("../Shared/_FooterOnPremise")
</div>
}
