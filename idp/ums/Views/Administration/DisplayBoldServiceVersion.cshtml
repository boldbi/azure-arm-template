@using Syncfusion.Server.Base.DataClasses;
@model List<BoldServiceDisplayVersion>
@{
    ViewBag.Title = T["Bold Service Version"] + " - " + GlobalAppSettings.SystemSettings.OrganizationName;
}

@section styles{
    <link rel="stylesheet" href="~/bundles/css/boldservice-version.css" asp-append-version="true" />
}

@section MainSection{
    @await Html.PartialAsync("_AdminMenu")
<div id="bold-service-version-container" class="col-xs-12 admin-page-content-container">
    <div class="admin-page-content col-xs-12 no-padding">
        <div class="col-xs-12 admin-page-header">
            <hgroup>
                <h1 class="h2 page-title">
                    @T["Bold Service Version"]
                </h1>
                <h5 class="page-description">
                    @T["Product version information of the Bold Service Applications."]
                </h5>
            </hgroup>
        </div>
        <div id="bold-service-version-body" class="col-xs-12 admin-page-body">
            <div>
                <table class="table table-section">
                    <tr>
                        <th>@T["Applications"]</th>
                        <th>@T["Versions"]</th>
                    </tr>
                    @foreach (var boldApp in Model)
                    {
                        <tr>
                            <td>@boldApp.ApplicationName</td>
                            <td>@boldApp.ApplicationVersion</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("../Shared/_FooterOnPremise")
</div>
}
