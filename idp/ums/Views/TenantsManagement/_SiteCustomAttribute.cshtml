@model TenantInfo
@{
    var activeTab = (!string.IsNullOrWhiteSpace(Context.Request.Query["tab"]) && Context.Request.Query["tab"] == "attributes") ? "active" : string.Empty;
}
<script type="text/x-jsrender" id="attribute-name-template">
    <span class="grid-content" title="${Name}">${Name}</span>
</script>
<script type="text/x-jsrender" id="attribute-description-template">
    <span class="grid-content" title="${Description}">${Description}</span>
</script>
<script type="text/x-jsrender" id="attribute-value-template">
    <span class="grid-content" title="${Value}">${Value}</span>
</script>
@*<link rel="stylesheet" href="~/bundles/css/custom-attribute.css" asp-append-version="true" />*@

<div role="tabpanel" class="col-12 float-start no-padding tab-pane @activeTab" id="custom-attribute-tab">
    <div class="admin-page-body col-lg-12 col-md-12 col-sm-12 col-12 float-start">
        <div class="col-12 float-start no-padding">
            <button type="button" class="primary-button float-end" id="add-custom-attribute" title="" >
                @T["Add Attribute"]
            </button>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 float-start no-padding">
            <div id="grid-tooltip">
                <div id="SiteAttributesGrid"></div>
            </div>
        </div>
          <script type="text/x-jsrender" nonce="@Context.Items["ScriptNonce"]" id="options">
            <div class="user-hover-options">
                <a href="#" class="text-decoration-none" id="edit-site-attribute" title="@T["Edit"]" data-bs-toggle="tooltip" data-id="${Id}">
                    <i class="su su-edit"></i>
                </a>
                <a class="delete-class text-decoration-none" href="#" id="remove-site-attribute" title="@T["Remove"]" data-bs-toggle="tooltip" data-id="${Id}" >
                    <i class="su su-delete"></i>
                </a>
            </div>
        </script>
    </div>
</div>
@await Html.PartialAsync("_AddCustomAttribue")
