@{
    var userDetail = (User)ViewBag.UserDetail;
    var requestUrl = new Uri(Context.Request.GetDisplayUrl());
    var currentUrl = requestUrl.PathAndQuery.TrimEnd('/');
    var profileDetailsUrl = Url.Action("ViewProfile", "UserManagement");
    var changePasswordUrl = Url.Action("ChangePassword", "UserManagement");
    var userAttributesUrl = Url.Action("UserAttributes", "UserManagement");
    var profileDetailsHrefUrl = !userDetail.Email.Contains(CloudAppConfig.AutoGeneratedEmailDomain) ? $"{profileDetailsUrl}?userId={userDetail.UserId}&email={userDetail.Email}" : $"{profileDetailsUrl}?userId={userDetail.UserId}";
}
<nav id="admin-menu-nav-bar">
    <ul>
        <li class="admin-menu-item  @(currentUrl.IndexOf(profileDetailsUrl, StringComparison.CurrentCultureIgnoreCase) > -1 || currentUrl.Equals(profileDetailsUrl, StringComparison.CurrentCultureIgnoreCase) ? "active" : string.Empty)">
            <a id="site-settings-link" class="text-decoration-none" href="@profileDetailsHrefUrl" role="tab">
                <i class="su su-single-user"></i>
                <span>@T["Profile Details"]</span>
            </a>
        </li>
        @if (ViewBag.AdminType == AdminType.SuperAdmin)
        {
            <li class="admin-menu-item @(currentUrl.IndexOf(changePasswordUrl, StringComparison.CurrentCultureIgnoreCase) > -1 || currentUrl.Equals(changePasswordUrl, StringComparison.CurrentCultureIgnoreCase) ? "active" : string.Empty)">
                <a id="site-settings-link" class="text-decoration-none" href="@changePasswordUrl?userId=@userDetail.UserId" role="tab">
                    <i class="su su-shield"></i>
                    <span>@T["Security"]</span>
                </a>
            </li>
        }
        <li class="admin-menu-item  @(currentUrl.IndexOf(userAttributesUrl, StringComparison.CurrentCultureIgnoreCase) > -1 || currentUrl.Equals(profileDetailsUrl, StringComparison.CurrentCultureIgnoreCase) ? "active" : string.Empty)">
            <a id="site-settings-link" class="text-decoration-none" href="@userAttributesUrl?userId=@userDetail.UserId" role="tab">
                <i class="su su-single-user"></i>
                <span>@T["Attributes"]</span>
            </a>
        </li>
        </ul>
</nav>
