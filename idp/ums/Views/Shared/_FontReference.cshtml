<link rel="stylesheet" class="font-ref" href="~/user-interface/fonts?family=@GlobalAppSettings.SystemSettings.FontFamily" crossorigin="anonymous" asp-append-version="true"/>
<script nonce="@Context.Items["ScriptNonce"]"
    type = "text/javascript" >
    function checkValidFontFile() {
        var elements = document.getElementsByClassName("font-ref");
        if (elements[0].sheet.rules.length == 0) {
            document.write('<link href="/bundles/fonts/font-robotoregular.css" integrity="@IntegrityTagHelper.GetIntegrity("bundles/fonts/font-robotoregular.css")" crossorigin="anonymous" rel="stylesheet"/>');
        }
    }
    checkValidFontFile();
</script>