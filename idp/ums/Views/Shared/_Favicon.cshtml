<link id="favicon" rel="icon" href="@Url.Content("~/logos?type=favicon")" />
<script nonce="@Context.Items["ScriptNonce"]" type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        var faviconLink = document.getElementById("favicon");
        var errorLink = '@GlobalAppSettings.CdnDomain/@(GlobalAppSettings.Branding == AppBranding.Bold.Identifier ? "boldid" : GlobalAppSettings.Branding)/application/@CloudAppConfig.Branding.BrandingImages.FavIcon';
        if (faviconLink) {
            faviconLink.addEventListener("error", function () {
                this.href = errorLink;
            });
        }
    });
</script>