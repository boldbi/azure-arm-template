<div class="modal" id="groups-delete-confirmation" tabindex="-1" role="dialog">
    <div class="col-lg-12 modal-dialog no-padding" role="document">
        <div class="col-lg-12 modal-content no-padding" autocomplete="off">
            <div class="col-md-12 modal-header">
                <div class="col-xs-8 no-padding">
                    <i class="su su-delete head-icon"></i>
                    <span class="modal-title">Delete Groups</span>
                </div>
                <div class="col-xs-4 no-padding">
                    <a href="javascript:void(0);" onclick="onDeleteDialogClose()" class="close">
                        <i class="su su-close"></i>
                    </a>
                </div>
            </div>
            <div class="modal-body col-xs-12">
                <div class="col-xs-12 no-left-padding no-bottom-padding no-right-padding">
                    <div class="delete-msg">Are you sure you want to delete the Group(s)?</div>
                </div>
            </div>
            <div class="col-xs-12 modal-footer">
                <div class="col-xs-4">
                    <input type="hidden" id="hiddenId" value="@ViewBag.id"/>
                </div>
                <div class="col-xs-8 no-padding">
                    <input type="hidden" value="">
                    <input type="button" onclick="MakeFlyDeleteGroups()" class="critical-action-button" value="Yes"/>
                    <input type="button" onclick="onDeleteDialogClose()" class="secondary-button popup-close" value="No"/>
                </div>
            </div>
        </div>
    </div>
</div>
