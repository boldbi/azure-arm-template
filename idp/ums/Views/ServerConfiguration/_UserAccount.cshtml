@{ 
    var passwordRules = string.Format(T["{0}6 character{1}1 uppercase letter{2}1 lowercase letter{3}1 number{4}1 special character{5}"].Value, "<ul class='text-body' id='password_policy_rules'><li id='p_policy_length'><span class = 'icon'></span><span class='content'>", "</span></li><li id='p_policy_uppercase'><span class = 'icon'></span><span class='content'>", "</span></li><li id='p_policy_lowercase'><span class = 'icon'></span><span class='content'>", "</span></li><li id='p_policy_number'><span class = 'icon'></span><span class='content'>", "</span></li><li id='p_policy_specialcharacter'><span class = 'icon'></span><span class='content'>", "</span></li></ul>");
    var displayName = GlobalAppSettings.BrandingDisplayName;
}

  <script nonce="@Context.Items["ScriptNonce"]">
        var displayName = "@displayName";
    </script>
<div class="col-md-12 system-settings-page-container " id="system-settings-user-account-container" >
    <form id="admin-account-fields-container" class="admin-account-fields-container" autocomplete="off">
        @Html.AntiForgeryToken()
        <div class="form-div form-group input-alignment form-group-top">
            <input type="text" tabindex="1" id="txt-firstname" name="firstname" class="" placeholder="@T["First name"]" maxlength="254"/>
            <span class="startup-validation txt-firstname validation-txt-errors"></span>
        </div>
        <div class="form-div form-group input-alignment">
            <input type="text" tabindex="2" id="txt-lastname" class="" placeholder="@T["Last name"]" name="lastname" maxlength="254"/>
            <span class="startup-validation validation-txt-errors"></span>
        </div>
        <div class="form-div form-group input-alignment">
            <input type="text" tabindex="3" id="txt-username" class="" placeholder="@T["Username"]" name="username" autocomplete="off" maxlength="254"/>
            <span class="startup-validation txt-username validation-txt-errors"></span>
            <div class="dropdown-menu mail-description" role="menu">
                <div class="username-content">
                    <div class="check-div">*</div>
                    <div id="username-detail">@T["Please enter a valid username."]</div>
                </div>
            </div>
        </div>
        <div class="form-div form-group input-alignment admin-form-email">
            <input type="text" tabindex="4" id="txt-emailid" class="" placeholder="@T["Email address"]" name="email" autocomplete="off" maxlength="254"/>
            <span class="startup-validation txt-emailid validation-txt-errors"></span>
            <div class="dropdown-menu mail-description" role="menu">
                <div class="mail-contain">
                    <div class="check-div">*</div>
                    <div id="mail-detail">@T["Please enter a valid email address."]</div>
                </div>
            </div>
        </div>
        <div class="form-div form-group input-alignment">
            <input type="text" class="display-none">
            <input type="password" class="fake-password" name="fake_passwordfield_to_turnoff_autocomplete">
            <input type="password" tabindex="5" id="new-password" class="" placeholder="@T["Password"]" name="password" autocomplete="off" maxlength="85" data-toggle="popover" data-title="@T["Password must contain:"]" data-trigger="focus" data-html="true" data-content="@passwordRules" data-placement="left"/>
            <span class="su su-show show-hide-password show-hide-password-ej2" data-toggle="tooltip" data-original-title="@T["Click to view"]"></span>
            <div class="startup-validation validation-txt-errors" id="new-password"></div>
        </div>

        <div id="confirm-password-section" class="form-div form-group input-alignment">
            <input type="text" class="display-none">
            <input type="password" tabindex="6" id="txt-confirm-password" class="" placeholder="@T["Confirm Password"]" name="confirm" autocomplete="off" maxlength="85"/>
            <span class="su su-show show-hide-password show-hide-password-ej2" data-toggle="tooltip" data-original-title="@T["Click to view"]"></span>
            <div class="startup-validation validation-txt-errors" id="confirm-password"></div>
        </div>
        <div class="btn-holder" id="admin-account-submit-container">
            <button type="button" tabindex="7" id="user-account-proceed" class="proceed-button">@T["Next"]</button>
        </div>
    </form>
</div>


