@using Syncfusion.Server.Base;
@using Syncfusion.Server.Base.DataClasses;
@using Microsoft.AspNetCore.Http.Extensions; 

@{
    var requestUrl = new Uri(Context.Request.GetDisplayUrl());
    var productName = GlobalAppSettings.Branding == AppBranding.Bold.Identifier ? GlobalAppSettings.GetDescription(TenantType.BoldID) : GlobalAppSettings.BrandingDisplayName;
    var brandingName = GlobalAppSettings.SystemSettings.OrganizationName;
    var brandingLogo = GlobalAppSettings.SystemSettings.LoginLogo;

}

@if (!requestUrl.AbsoluteUri.Contains("userid"))
{
    <meta property="description" content="Log in with your @brandingName Account." />
    <meta property="og:title" content="Log in with your @brandingName Account." />
    <meta property="og:description" content="Log in with your @brandingName Account." />
    <meta property="og:image" content="@brandingLogo" />
    <meta property="og:url" content="@requestUrl.AbsoluteUri" />
    <meta property="og:type" content="website" />
    <meta property="og: site_name" content="@brandingName" />
    <meta property="twitter:title" content="Log in with your @brandingName Account." />
    <meta property="twitter:url" content="@requestUrl.AbsoluteUri" />
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:description" content="Log in with your @brandingName Account." />
    <meta property="twitter:image" content="@brandingLogo" />
}