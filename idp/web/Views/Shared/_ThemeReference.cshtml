@if (GlobalAppSettings.SystemSettings.Theme.Appearance == "light")
{
    <link rel="stylesheet" href="@CloudAppConfig.TenantManagementUrl(Context).TrimEnd('/')/bundles/css/lighttheme.css" asp-append-version="true" />
}
else
{
    <link rel="stylesheet" href="@CloudAppConfig.TenantManagementUrl(Context).TrimEnd('/')/bundles/css/darktheme.css" asp-append-version="true" />
}
<link rel="stylesheet" href="@CloudAppConfig.TenantManagementUrl(Context).TrimEnd('/')/theme/styles/application?theme=@GlobalAppSettings.SystemSettings.Theme.ApplicationTheme" crossorigin="anonymous" asp-append-version="true" />