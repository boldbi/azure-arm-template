@using Syncfusion.Server.Base;
@using Syncfusion.Server.Base.DataClasses;

@{
    var controller = Context.Request.RouteValues["controller"].ToString();

    var action = Context.Request.RouteValues["action"].ToString();

    var isServerLogin = controller.Equals("accounts", StringComparison.OrdinalIgnoreCase) && action.Equals("login", StringComparison.OrdinalIgnoreCase);

    var isAppLogin = controller.Equals("authorization", StringComparison.OrdinalIgnoreCase) && action.Equals("login", StringComparison.OrdinalIgnoreCase);

    if (isServerLogin || isAppLogin)
    {
        Layout = "~/Views/Shared/_Layout.Accounts.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}