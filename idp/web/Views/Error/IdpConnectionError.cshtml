@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>[[[Login Error]]]</title>
    @await Html.PartialAsync("../Shared/_FontReference")
    <link rel="stylesheet" href="~/bundles/css/error-page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bundles/css/error-page-new.css" asp-append-version="true" />
    @await Html.PartialAsync("~/Views/Shared/_Favicon.cshtml")
</head>
<body class="error-full-content">
    <div class="error-page-outer">
        <div class="error-page-content">
            <div class="error-inside">
                <div class="error-image-center-1">
                    <img src="@GlobalAppSettings.SystemSettings.LoginLogo" class="error-image-1"/>
                </div>
                <div class="error-image-center-2">
                    <img src="@GlobalAppSettings.SystemSettings.CDNLink/images/common/application/login_failed.svg" alt="[[[Login Failed]]]" class="error-image-2" style="width:250px;height:150px">
                </div>
                <div class="error-type">[[[Login Error!]]]</div>
                <div class="error-text">
                    <span>[[[Looks like something went wrong while establishing a connection. Please refresh the page and try again.]]]</span>
                    <br />
                    <span>[[[If the problem persists, please contact your administrator.]]]</span>
                </div>
                <div class="take-me-back-to-home-page">
                    <span class="error-page-cursor">
                        <a class="error-to-beck-text-color" href="javascript:window.location.reload(true)">[[[Refresh the page]]]</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
