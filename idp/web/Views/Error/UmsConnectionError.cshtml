@using Syncfusion.Server.Base;
@using Syncfusion.Server.Base.DataClasses;
@{
    Layout = null;
    var authMessage = TempData["AuthMessage"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @if (!CloudAppConfig.IsSelfHosted)
    {
        <title>Syncfusion Cloud Management - Login Error</title>
    }
    else
    {
        <title>[[[Login Error]]] - @GlobalAppSettings.SystemSettings.OrganizationName</title>
    }
    @await Html.PartialAsync("~/Views/Shared/_Favicon.cshtml")
    @await Html.PartialAsync("../Shared/_FontReference")
    <link rel="stylesheet" href="~/bundles/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bundles/css/error-page.css" asp-append-version="true" />
    <script src="~/Scripts/jQuery/jquery-1.10.2.min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $(".base-container-bg").css("display", "");
        });
    </script>
</head>
<body>
    <div class="base-container-bg" style="display: none">
        <div class="base-conatiner" id="base-conatiner">
            <div id="main-div">
                <div class="app-logo">
                    <img src="@GlobalAppSettings.SystemSettings.LoginLogo" />
                </div>
                <div class="secondary-div">
                    <div class="page-title">
                        [[[Login Error]]]
                    </div>
                    <div class="page-content text-left">
                        <span>[[[Error in establishing a connection to our login service.]]]</span><br />
                        <br />
                        <span>@authMessage</span>
                    </div>
                    <div>
                        <span><a href="@Url.Action("Login", "Accounts")">[[[Return to Login]]]</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>