@using Syncfusion.Server.Base;
@using Syncfusion.Server.Base.DataClasses;
@using Microsoft.AspNetCore.Http;
@{
    Layout = null;
    var imageHelper = new ImageHelper();
    var errorstacktrace = GlobalAppSettings.ReplaceErrorStackTrace(ViewBag.Errorstacktrace);
    var isAdmin = Context.Session.GetString("IsAdmin") != null ? Convert.ToBoolean(Context.Session.GetString("IsAdmin").ToString()) : false;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@T["Internal Server Error"] - @GlobalAppSettings.SystemSettings.OrganizationName</title>
    @await Html.PartialAsync("../Shared/_Favicon")
    @await Html.PartialAsync("../Shared/_FontReference")
    @await Html.PartialAsync("../Shared/_ThemeReference")
    <link rel="stylesheet" href="~/bundles/css/error-page.css" asp-append-version="true" />
      <script nonce="@Context.Items["ScriptNonce"]" src="~/bundles/js/error.js" asp-append-version="true"></script>
    <script nonce="@Context.Items["ScriptNonce"]">
        var defaultErrorImageSrc = "@Url.Content(CloudAppConfig.FallbackLoginLogoUrl)";
        document.addEventListener("DOMContentLoaded", function () {
            var logoimage = document.getElementById("page-not-found-image-five-hundred");
            if (logoimage) {
                logoimage.onerror = function () {
                    this.onerror = null;
                    this.src = defaultErrorImageSrc;
                };
            }
        });
    </script>
</head>
<body class="error-full-content">
    @await Html.PartialAsync("~/Views/Shared/_LocalizationContent.cshtml")
    <div class="error-page-outer">
        <div class="error-page-content">
            <div class="error-inside">
                <div class="error-image-center-1">
                    <img id="page-not-found-image-five-hundred" src="@Url.Content($"{CloudAppConfig.TenantManagementUrl.TrimEnd('/')}/logos?type=login")" class="error-image-1">
                </div>
                <div class="error-image-center-2">
                    <img src="@imageHelper.InternalServerErrorImage()" class="error-image-2">
                </div>
                <div class="error-type">@T["Internal Server Error (500)"]</div>
                <div class="error-text">
                    @T["Sorry! The server has encountered an internal error and was unable to complete your request."]
                </div>
                @if (ViewBag.ErrorMessage != null)
                {
                    @if (GlobalAppSettings.SystemSettings.ShowStackTrace || isAdmin)
                    {
                        <div id="deploy-error-container">
                            <textarea type="text" id="deploy-error-box" disabled>@T["ErrorMessage"]:@ViewBag.ErrorMessage 
@T["ErrorStacktrace"]:@errorstacktrace</textarea>
                            <span class="su su-copy text focus" id="deploy-error-copy" data-toggle="tooltip" title="@T["Click to copy"]"></span>
                        </div>
                    }
                    else
                    {
                        <div id="deploy-error-container">
                            <textarea type="text" id="deploy-error-box" disabled>@T["ErrorMessage"]:@ViewBag.ErrorMessage</textarea>
                            <span class="su su-copy text focus" id="deploy-error-copy" data-toggle="tooltip" title="@T["Click to copy"]"></span>
                        </div>
                    }
                    <div class="take-me-back-to-home-page">
                        @Html.Raw(string.Format(T["{0}Go to home page{1} or {2}Create a support ticket{3} with application logs by referring to this {4}link{5}."].Value,
                    $"<span class='error-page-cursor'><a class='error-to-back-text-color' href='{GlobalAppSettings.SystemSettings.BaseUrl}'>",
                    "</a></span>",
                    $"</span><span class='error-page-cursor'><a class='error-to-back-text-color' href='https://support.{GlobalAppSettings.BrandingDomain}/create' target='_blank'>",
                    "</a></span>",
                    $"</span><span class='error-page-cursor'><a class='error-to-back-text-color' href='{ await HelpSiteManager.GetHelpSiteUrl(HelpSiteUrlNames.ErrorAndDebugLogs)}' target='_blank'>",
                    "</a></span>"))
                    </div>
                }
                else
                {
                    <div class="take-me-back-to-home-page">
                        <span class="error-page-cursor"><a class="error-to-back-text-color" href="@GlobalAppSettings.SystemSettings.BaseUrl">@T["Take me back to home page"]</a></span>
                    </div>
                }
            </div>
        </div>
    </div>
    @if (CloudAppConfig.IsSelfHosted)
    {
        @await Html.PartialAsync("../Shared/_FooterOnPremise")
    }
</body>
</html>
