@{
    var userDetail = (User)ViewBag.UserDetail;
    ViewBag.Title = T["Profile"].Value + " - " + T["Attributes"].Value + " - " + GlobalAppSettings.SystemSettings.OrganizationName;
}

@section styles{
    <link rel="stylesheet" href="~/bundles/css/profile.css" asp-append-version="true" />
}

@section scripts{
    <script src="~/bundles/js/profile.js" asp-append-version="true"></script>
    <script>
        var userAttributesUrl = "@Url.Action("GetUserAttributes", "User")";
        var userId = "@userDetail.UserId";
        var fileUploadUrl = "@Url.Action("Upload", "fileupload")";
        $(document).ready(function () {
            generateProfileAvatar();
        });
    </script>

    <script type="text/x-jsrender" id="attribute-name-template">
        <span class="grid-content" title="${Name}" data-toggle="tooltip">${Name}</span>
    </script>
    <script type="text/x-jsrender" id="attribute-description-template">
        <span class="grid-content" title="${Description}" data-toggle="tooltip">${Description}</span>
    </script>
    <script type="text/x-jsrender" id="attribute-value-template">
        ${if (CanEncrypt)}
        <span class="grid-content" title="*****" data-toggle="tooltip">*****</span>
        ${else}
        <span class="grid-content" title="${Value}" data-toggle="tooltip">${Value}</span>
        ${/if}
    </script>
}

@section MainSection{
    @await Html.PartialAsync("_UserProfileMenu")
    <div class="col-xs-12 header-section no-padding no-margin width-alignment">
        <div class="admin-page-header col-md-12 col-lg-12 col-sm-12">
            <div class="col-xs-6 no-padding">
                <div class="admin-page-header-description col-xs-6 no-padding">
                    <hgroup class="col-xs-12 header-group">
                        <h1 class="page-title" id="display-name">@T["Attributes"]</h1>
                    </hgroup>
                </div>
            </div>
            <div class="col-xs-4 top-nav-sec no-padding">
                @await Html.PartialAsync("../Shared/_TopMenu")
            </div>
        </div>
    </div>
    <div id="user-attributes-container" class="col-md-12 col-sm-12 col-xs-12 col-lg-12 admin-page-content-container height-without-button" role="tabpanel">
        <div class="admin-page-content col-xs-12 no-padding">
            <div class="col-xs-12 no-padding user-attributes-content">
                <div class="admin-page-body col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding">
                        <div id="grid-tooltip">
                            <div id="UsersAttributesGrid"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @await Html.PartialAsync("../Shared/_FooterOnPremise")
    </div>
}
