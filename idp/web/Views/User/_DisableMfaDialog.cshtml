<div id="disable-mfa-confirmation"></div>
<div id="disable-mfa-confirmation-dialog-content">
    @T["Are you sure you want to disable two factor authentication for your account?"]
    <div class="admin-page-body">
        <div id="disable-mfa-container" class="disable-mfa-container">
            <div>
                <p class="info-message">@T["Enter the security code generated by your authenticator app."]</p>
                <input id="disable-verification-code" class="form-control" autocomplete="off" placeholder="@T["Enter the six-digit code"]"/>
                <div class="validation-holder">
                    <span id="disable-validation-error" class="validation-messages"></span>
                </div>
            </div>
        </div>
    </div>
</div>