@{
    Layout = null;
    var cdnLink = @GlobalAppSettings.CdnDomain;
}
<!DOCTYPE html>
<html class="dashboard-server">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>[[[Internal Server Error]]] - @GlobalAppSettings.BrandingDisplayName</title>
    @Styles.Render("~/bundles/styles/layout")
    @Styles.Render("~/bundles/styles/error-page")
    <script src="~/Scripts/jQuery/jquery-1.10.2.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".base-container-bg").css("display", "");
        });
    </script>
    <link rel="icon" href="@cdnLink/application/@ServerAppConfig.AppBranding/@IconFileNames.Favicon" onerror="if (this.href != '@cdnLink/application/@ServerAppConfig.AppBranding/@IconFileNames.Favicon') this.href = '@cdnLink/application/@ServerAppConfig.AppBranding/@IconFileNames.Favicon';" />
    @Html.Partial("~/Views/Shared/_LoaderIcon.cshtml")
</head>
<body>
    <div class="base-container-bg" style="display: none">
        <div class="base-conatiner" id="base-conatiner">
            <div id="main-div">
                <div class="app-logo">
                    <img src="@GlobalAppSettings.CdnDomain/email/images/main-logo.png" />
                </div>
                <div class="secondary-div">
                    <div class="page-title">
                        [[[Internal Server Error]]]
                    </div>
                    @if (!ServerAppConfig.IsSelfHosted)
                    {
                        if (GlobalAppSettings.Branding == AppBranding.Syncfusion.Identifier)
                        {
                            <div class="page-content">[[[The requested page failed to load. If the problem persists, please contact Syncfusion Support.]]]</div>
                        }
                        else
                        {
                            <div class="page-content">[[[The requested page failed to load. If the problem persists, please contact Bold BI Support.]]]</div>
                        }
                        <div class="support-div">
                            <a href="@ServerAppConfig.ProductHome/contact" class="support-button">[[[Create a Support ticket]]]</a>
                        </div>
                    }
                    else
                    {
                        <div class="page-content">[[[The requested page failed to load. If the problem persists, please contact your administrator.]]]</div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
