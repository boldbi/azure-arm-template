                                        <span class="bg-info" id="id-account-link">
                                            <input type="button" id="edit" class="" value="@T["Edit Profile"]" readonly>
                                        </span>
                                    </label>
                                }
                            </div>
                        </div>
                        @if (userDetail.DirectoryType != DirectoryType.Local && !isOAuthorOpenIdUser)
