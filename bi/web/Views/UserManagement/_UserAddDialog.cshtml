@{
    var globalAppSettings = _globalAppSettings;
}
<div id="user-add-dialog-wrapper" style="display:none">
    <div class="modal" tabindex="-1" role="dialog">
        <div id="user-add-dialog" class="modal-dialog" role="document">
            <form class="col-lg-12 no-padding add-user-dialog-form modal-content" id="dialog-container" autocomplete="off">
                <div class="col-md-12 modal-header">
                    <div class="col-8 no-padding">
                        <i class="su su-user-add head-icon"></i>
                        <span class="modal-title">@T["Add User"]</span>
                    </div>
                    <div class="col-4 no-padding">
                        <a class="close" title="@T["Close"]" href="javascript:void(0);" onclick="onUserAddDialogClose()">
                            <i class="su su-close"></i>
                        </a>
                    </div>
                </div>
                <div id="message" class="validation-message"></div>
                <div class="modal-body col-12 no-padding form">
                    @if (globalAppSettings.SystemSettings.IsEmailRequired)
                    {
                        <div class="col-12 form-padding">
                            <label class="col-4 app-textbox-label text-right">@T["Email address"]<span class="mandatory">*</span></label>
                            <div class="col-8 no-left-padding">
                                <input type="text" id="mailid" data-maxlength="255" placeholder="@T["Email address"]" class="form-control validation" name="email-address" data-name="email address" />
                                <span class="useradd-validation-messages" id="invalid-email"></span>
                            </div>
                        </div>
                        @if (ServerAppConfig.IsSelfHosted)
                        {
                            <div class="col-12 form-padding">
                                <label class="col-4 app-textbox-label text-right">@T["Username"]<span class="mandatory">*</span></label>
                                <div class="col-8 no-left-padding">
                                    <input type="text" id="username" data-maxlength="255" placeholder="@T["User name"]" class="form-control validation" name="user-name" data-name="user name" />
                                    <span class="useradd-validation-messages" id="invalid-username"></span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        @if (ServerAppConfig.IsSelfHosted)
                        {
                            <div class="col-12 form-padding">
                                <label class="col-4 app-textbox-label text-right">@T["Username"]<span class="mandatory">*</span></label>
                                <div class="col-8 no-left-padding">
                                    <input type="text" id="username" data-maxlength="255" placeholder="@T["User name"]" class="form-control validation" name="user-name" data-name="user name" />
                                    <span class="useradd-validation-messages" id="invalid-username"></span>
                                </div>
                            </div>
                            <div class="col-12 form-padding">
                                <label class="col-4 app-textbox-label text-right">@T["Email address"]</label>
                                <div class="col-8 no-left-padding">
                                    <input type="text" id="mailid" data-maxlength="255" placeholder="@T["Email address"]" class="form-control validation" name="email-address" data-name="email address" />
                                    <span class="useradd-validation-messages" id="invalid-email"></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-12 form-padding">
                                <label class="col-4 app-textbox-label text-right">@T["Email address"]<span class="mandatory">*</span></label>
                                <div class="col-8 no-left-padding">
                                    <input type="text" id="mailid" data-maxlength="255" placeholder="@T["Email address"]" class="form-control validation" name="email-address" data-name="email address" />
                                    <span class="useradd-validation-messages" id="invalid-email"></span>
                                </div>
                            </div>
                        }

                    }
                    <div class="col-12 form-padding">
                        <label class="col-4 app-textbox-label text-right">@T["First name"]<span class="mandatory">*</span></label>
                        <div class="col-8 no-left-padding">
                            <input type="text" id="firstname" data-maxlength="255" class="form-control  validation" placeholder="@T["First name"]" name="first-name" data-name="first name">
                            <span class="useradd-validation-messages" id="invalid-firstname"></span>
                        </div>
                    </div>
                    <div class="col-12 form-padding last-name">
                        <label class="col-4 app-textbox-label text-right">@T["Last name"]</label>
                        <div class="col-8 no-left-padding">
                            <input type="text" id="lastname" data-maxlength="255" class="form-control  validation" placeholder="@T["Last name"]" name="last-name" data-name="last name">
                            <span class="useradd-validation-messages"></span>
                        </div>
                    </div>
                    @if (globalAppSettings.SystemSettings.ActivationType == ActivationType.AutomaticActivation)
                    {
                        <div class="col-12 form-padding password" id="user-password-field">
                            <label class="col-4 app-textbox-label text-right">@T["Password"]<span class="mandatory">*</span></label>
                            <div class="col-8 no-left-padding">
                                <i class="su su-eye view-green show-hide-password"> </i>
                                <input type="password" id="user-password" data-maxlength="85" class="form-control validation" placeholder="@T["Password"]" name="user-password" data-name="user-password">
                                <span class="useradd-validation-messages"></span>
                            </div>
                        </div>
                    }
                    <div id="disable-info" style="padding:10px; display:inline-block;"></div>
                </div>
                <div class="col-12 modal-footer">
                    <div class="col-4"></div>
                    <div class="col-8 no-padding">
                        <input type="button" id="add-user" class="primary-button app-btn-primary" value="@T["Add"]" />
                        <input type="button" id="cancel-user" class="secondary-button app-btn-secondary popup-close" value="@T["Cancel"]" onclick="onUserAddDialogClose()" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>