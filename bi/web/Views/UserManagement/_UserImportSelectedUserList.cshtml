<div id="selected-join-query" class="col-12">
    <div class="float-start connection-str-holder">
        <label class="app-textbox-label float-start">[[[Query to pull users :]]]</label>
        <div id="join-query">@ViewBag.JoinQuery </div>
    </div>
    <div class="float-start change-connection-btn">
        <button type="button" id="change-selected-column" class="primary-button app-btn-primary">[[[Change Query]]]</button>
    </div>
</div>
<div class="col-12">
    <div id="grid-info-content" class="float-start">
        <span>[[[Please search and select the users from the following list to import]]] </span>
    </div>
    <div class="float-end search-user-holder">
        <input id="search-database-users" type="text" autocomplete="off" placeholder="[[[Search users]]]" class="form-control">
        <span id="clear-search" class="su su-inner-close close-icon" data-bs-toggle="tooltip" data-placement="bottom" title="[[[Clear search]]]"></span>
        <span class="su su-search search-user" data-bs-toggle="tooltip" data-placement="bottom" title="[[[Search user]]]"></span>
    </div>
</div>
<div id="error-value" class="col-12">
    <span class="error-message"></span>
</div>
<script type="text/x-jsrender" id="user-detail-validation">
    {{if IsDuplicated}}
    <span class="su su-login-error user-import-validation" title="{{:DisplayMessage}}" data-html="true" data-bs-toggle="tooltip" data-placement="left"></span>
    {{/if}}
</script>
<script type="text/x-jsrender" id="checkbox-row-template">
    {{if IsDuplicated}}
    <input disabled type="checkbox" class="checkbox-row-disabled material-checkbox" data-checked-id="{{:Index}}" id="row-check{{:Index}}" />
    <input name="row-check{{:Index}}" type="hidden" value="false">
    <label for="row-check{{:Index}}"> </label>
    {{else}}
    <input type="checkbox" class="checkbox-row material-checkbox" data-checked-id="{{:Index}}" id="row-check{{:Index}}" />
    <input name="row-check{{:Index}}" type="hidden" value="false">
    <label for="row-check{{:Index}}"> </label>
    {{/if}}
</script>

<script type="text/x-jsrender" id="checkbox-header-template">
    @Html.CheckBox("checkbox-header", new { @class = "material-checkbox" })
    @Html.Label("checkbox-header", " ", new { @class = "checkbox-header-label" })
</script>

<script type="text/x-jsrender" id="full-name-header">
    <span class="item-header">[[[Name]]]</span>
</script>
<script type="text/x-jsrender" id="user-name-header">
    <span class="item-header">[[[Username]]]</span>
</script>
<script type="text/x-jsrender" id="last-name-header">
    <div class="item-header">[[[Last Name]]]</div>
</script>
<script type="text/x-jsrender" id="first-name-header">
    <div class="item-header">[[[First Name]]]</div>
</script>
<script type="text/x-jsrender" id="email-id-header">
    <span class="item-header">[[[Email Address]]]</span>
</script>

<script type="text/javascript">
    var gridData = @Html.Raw(Json.Serialize(ViewBag.ExternalDatabaseUsers));
</script>

<div id="grid-container" class="col-12">
    <div class="col-12 container-fluid page-inner-padding no-padding ">
        <div id="Grid">
        </div>
    </div>
</div>

@await Html.PartialAsync("../UserManagement/_LimitUserCreation")