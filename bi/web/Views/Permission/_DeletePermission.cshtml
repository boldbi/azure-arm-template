<div id="permission-delete-confirmation" class="no-padding">
    <div class="col-lg-12 no-padding modal-content" id="container">
        <div class="col-md-12 modal-header">
            <div class="col-xs-8 no-padding">
                <span class="su su-delete head-icon"></span>
                <span class="modal-title">[[[Delete Permission]]]</span>
            </div>
            <div class="col-xs-4 no-padding">
                <a href="javascript:void(0);" onclick="onPermissionDialogClose()" class="popup-close"><span class="su su-close  pull-right"></span></a>
                <div id="folder-setting-arrow" class="downArrow" style="left: 37px;"></div>
            </div>
        </div>
        <div class="modal-body col-xs-12 no-padding">
            <div class="col-xs-12 no-left-padding no-bottom-padding no-right-padding">
                <div class="delete-msg">[[[Are you sure you want to delete this permission?]]]</div>
            </div>
        </div>
        <div class="col-xs-12 modal-footer">
            <div class="col-xs-4"><input type="hidden" id="hidden-id" value="@ViewBag.id" /></div>
            <div class="col-xs-8 no-padding pull-right margin-top">
                <input type="hidden" value="" id="delete-user-id">
                <input type="button" class="app-button app-critical-action-button app-btn-danger" id="delete-permission" value="[[[Yes]]]" />
                <input type="button" onclick="onPermissionDialogClose()" class="app-button app-secondary-button app-btn-secondary popup-close" value="[[[No]]]" />
            </div>
        </div>
    </div>
</div>