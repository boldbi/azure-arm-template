<!DOCTYPE html>
@{
    Layout = null;
    var globalAppSettings = _globalAppSettings;
    var dashboardServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');

}
<html class="dashboard-server">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0">
    <title>
        Create data source popup
    </title>
    @await Html.PartialAsync("~/Views/Shared/_BaseFontStyleSheet.cshtml")
    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/create-datasource.css" />
        <script asp-append-version="true" src="@dashboardServerResourceUrl/cdn/scripts/create-datasource.js"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/create-datasource.min.css" />
        <script asp-append-version="true" src="@dashboardServerResourceUrl/cdn/scripts/create-datasource.min.js"></script>
    </environment>


    @await Html.PartialAsync("~/Views/Shared/_LoaderIcon.cshtml")


    <script>
        $(document).ready(function () {
            parent.$("#create-datasource-popup_wrapper").ejWaitingPopup("hide");
        });
    </script>
</head>
<body style="background-color:white">
    <div id="PopupContainer" class="col-lg-12 no-padding dialog">
        <div class="col-12 dialog-header">
            <div class="col-xs-10 no-padding">
                <span class="su su-widget Head-icon"></span>
                <span class="PopupTitle extendedTitle" title="@T["Create Data Source"]">@T["Create Data Source"]</span>
            </div>
            <div class="no-padding">
                <a href="javascript:void(0);" title="@T["Close"]" class="PopupClose" onclick="parent.onCreateDataSourceDialogClose()"><span class="su su-close"></span></a>
            </div>
        </div>
        <form></form>
    </div>
</body>
</html>
