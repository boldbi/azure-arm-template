                        @T["Dashboard"]: <span class="values">{{:ItemName}}</span> <br />
                        @T["Last Run"] <span class="values">{{:LastRunString}}</span><br />
                        @T["Next Run"] <span class="values">{{:NextScheduleString}}</span>
