                        {{if Status=="Active"}}
                        {{if !IsScheduledItemDeleted && !(IsWidgetDeleted && DashboardWidgetId != "@Guid.Empty") && !(IsViewDeleted && DashboardViewId != "@Guid.Empty")}}
