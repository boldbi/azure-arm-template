@{
    var globalAppSettings = _globalAppSettings;
    var url = new Uri(Context.Request.GetDisplayUrl());
    var requestUrl = url.AbsolutePath.ToString().ToLower();
    var appCustomtheme = _identityResponse.CustomApplicationTheme != string.Empty ? _identityResponse.CustomApplicationTheme : string.Empty;
    var dns = url.GetLeftPart(UriPartial.Authority);
}

<link asp-append-version="true" rel="stylesheet" class="application-theme-ref" href="@ServerAppConfig.GetCustomThemeUrl(appCustomtheme, dns, globalAppSettings, _identityResponse)" />
