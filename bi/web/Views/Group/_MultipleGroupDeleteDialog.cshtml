<div class="modal" id="groups-delete-confirmation" tabindex="-1" role="dialog">
    <div class="col-lg-12 modal-dialog no-padding" role="document">
        <div class="col-lg-12 modal-content no-padding" autocomplete="off">
            <div class="col-md-12 modal-header">
                <div class="col-8 no-padding">
                    <i class="su su-delete head-icon"></i>
                    <span class="modal-title">@T["Delete Groups"]</span>
                </div>
                <div class="col-4 no-padding">
                    <a href="#" class="close delete-dialog-close"><i class="su su-close"></i></a>
                </div>
            </div>
            <div class="modal-body col-12">
                <div class="col-12 left-padding">
                    <div class="delete-msg">@T["Are you sure you want to delete the group(s)?"]</div>
                </div>
            </div>
            <div class="col-12 modal-footer">
                <div class="col-4"><input type="hidden" id="hiddenId" value="@ViewBag.id" /></div>
                <div class="col-8 no-padding">
                    <input type="hidden" value="">
                    <input type="button" class="critical-action-button app-btn-danger" value="@T["Yes"]" />
                    <input type="button" class="secondary-button app-btn-secondary popup-close float-end delete-dialog-close" value="@T["No"]" />
                </div>
            </div>
        </div>
    </div>
    </div>
