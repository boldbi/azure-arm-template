
@{
    Layout = null;
    var globalAppSettings = _globalAppSettings;
    var dashboardServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
    var themeCss = globalAppSettings.SystemSettings.AppTheme.BaseTheme + ".css";
    var themeMinCss = globalAppSettings.SystemSettings.AppTheme.BaseTheme + ".min.css";
    var themeBaseColors = globalAppSettings.SystemSettings.AppTheme.BaseColors;
}

<!DOCTYPE html>
<html class="dashboard-server">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0">
    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/theme/@themeCss" />
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/editdelete.css" />
        <link rel="stylesheet" asp-append-version="true" href="@ServerAppConfig.CustomFontUrl(globalAppSettings?.SystemSettings?.FontPreference, dashboardServerResourceUrl)" />
        <script asp-append-version="true" src="@dashboardServerResourceUrl/cdn/scripts/deletegroupuser.js"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/theme/@themeMinCss" />
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/editdelete.min.css" />
        <link rel="stylesheet" asp-append-version="true" href="@ServerAppConfig.CustomFontUrl(globalAppSettings?.SystemSettings?.FontPreference, dashboardServerResourceUrl)" />
        <script asp-append-version="true" src="@dashboardServerResourceUrl/cdn/scripts/deletegroupuser.min.js"></script>
    </environment>

    <style>
          :root {
              @themeBaseColors
          }
    </style>

    <script>
        var deleteUserFromGroupUrl = "@Url.Action("DeleteUserFromGroup", "group")";
        var deleteGroupUrl = "@Url.Action("DeleteGroup", "group")";
    </script>

    @await Html.PartialAsync("~/Views/Shared/_LoaderIcon.cshtml")


</head>
<body id="user-delete">
    <div id="user-delete-confirmation" class="no-padding">
        <div class="col-md-12 error-message pull-left no-padding">@TempData["ErrorMessage"]</div>
        <div class="col-md-12 success-message pull-left no-padding"></div>
        <div class="modal-content col-xs-12 no-padding" id="container">
            <div class="col-md-12 modal-header">
                <div class="col-xs-8 no-padding">
                    <span class="su su-delete head-icon"></span>
                    <span class="modal-title">@T["Remove Access"]</span>
                </div>
                <div class="col-xs-4 no-padding">
                    <a href="javascript:void(0);" class="popup-close  pull-right"><span class="su su-close"></span></a>
                    <div id="folder-setting-arrow" class="downArrow" style="left: 37px;"></div>
                </div>
            </div>
            <div class="modal-body col-xs-12 no-padding">
                <div class="col-xs-12 no-left-padding no-bottom-padding no-right-padding">
                    <div class="delete-msg">@T["Are you sure you want to remove user access?"]</div>
                </div>
            </div>
            <div class="col-xs-12 modal-footer">
                <div class="col-xs-4">
                    <input type="hidden" id="hidden-id" value="@ViewBag.id" />
                    <input type="hidden" id="hidden-name" value="@ViewBag.name" />
                    <input type="hidden" id="hidden-group-id" value="@ViewBag.groupId" />
                </div>
                <div class="col-xs-8 no-padding pull-right margin-top">
                    <input type="button" id="delete-user" class="critical-action-button app-btn-danger margin-right" value="@T["Yes"]" />
                    <input type="button" id="cancel-group" class="secondary-button app-btn-secondary popup-close" value="@T["No"]" />
                </div>
            </div>
        </div>
    </div>
    <environment include="Development,CloudDevelopment">
        <script asp-append-version="true" src="~/js/localizationcontent.js?v=@ServerAppConfig.ProductVersion&c=@System.Globalization.CultureInfo.CurrentCulture"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <script asp-append-version="true" src="~/js/localizationcontent.js?v=@ServerAppConfig.ProductVersion&c=@System.Globalization.CultureInfo.CurrentCulture"></script>
    </environment>
</body>
</html>